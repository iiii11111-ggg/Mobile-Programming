<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!--1. 검색창 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#F7F7F7">

        <!-- ← 아이콘 -->
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="뒤로가기"
            android:src="@drawable/backbutton" />

        <!-- 검색창 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:gravity="center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="운동을 입력하세요"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- + 아이콘 -->
        <ImageView
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginStart="12dp"
            android:contentDescription="추가"
            android:src="@drawable/calendarbutton" />
    </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:background="#FFFFFF"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 분류 탭 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분류"
                android:textSize="14sp"
                android:textColor="#000000"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <!-- 나머지 탭 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목"
                android:textSize="14sp"
                android:textColor="#888888"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="승모근"
                android:textSize="14sp"
                android:textColor="#888888"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어깨"
                android:textSize="14sp"
                android:textColor="#888888"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가슴"
                android:textSize="14sp"
                android:textColor="#888888"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등"
                android:textSize="14sp"
                android:textColor="#888888"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삼두"
                android:textSize="14sp"
                android:textColor="#888888"
                android:padding="8dp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 운동 이미지 -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ohp"
            android:contentDescription="운동 이미지"
            android:scaleType="fitCenter" />

        <!-- 운동 이름 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오버헤드프레스"
                android:textSize="15sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- 오른쪽 숫자 -->
        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="세트수"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- 즐겨찾기 아이콘 -->

        <!-- 오른쪽 화살표 -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 운동 이미지 -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sarere"
            android:contentDescription="리어 레터럴 레이즈"
            android:scaleType="centerCrop" />

        <!-- 운동 이름 + 설명 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사이드 레터럴 레이즈"
                android:textSize="15sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- 횟수 -->
        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="세트수"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- 즐겨찾기 아이콘 -->

        <!-- 오른쪽 화살표 -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 운동 이미지 -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/backfly"
            android:contentDescription="백 플라이"
            android:scaleType="centerCrop" />

        <!-- 운동 이름 + 설명 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="백 플라이"
                android:textSize="15sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- 횟수 -->
        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="세트수"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <!-- 즐겨찾기 아이콘 -->

        <!-- 오른쪽 화살표 -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 운동 이미지 -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/deadlift"
            android:contentDescription="데드리프트"
            android:scaleType="centerCrop" />

        <!-- 운동 이름 + 설명 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="데드리프트"
                android:textSize="15sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- 횟수 -->
        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="세트수"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <!-- 즐겨찾기 아이콘 -->

        <!-- 오른쪽 화살표 -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 운동 이미지 -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/running"
            android:contentDescription="런닝"
            android:scaleType="centerCrop" />

        <!-- 운동 이름 + 설명 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="런닝"
                android:textSize="15sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- 횟수 -->
        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="세트수"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />

        <!-- 즐겨찾기 아이콘 -->

        <!-- 오른쪽 화살표 -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- 운동 이미지 -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/hacksquat"
            android:contentDescription="핵스쿼트"
            android:scaleType="centerCrop" />

        <!-- 운동 이름 + 설명 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="핵스쿼트"
                android:textSize="15sp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="12sp"
                android:textColor="#999999" />
        </LinearLayout>

        <!-- 횟수 -->
        <TextView
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:text="세트수"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginEnd="8dp" />


        <!-- 오른쪽 화살표 -->
    </LinearLayout>
</LinearLayout>