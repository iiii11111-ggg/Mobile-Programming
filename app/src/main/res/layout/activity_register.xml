<!-- res/layout/activity_signup.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF1E1">

    <LinearLayout
        android:orientation="vertical"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="회원가입"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:hint="아이디 :"
                android:layout_width="220dp"
                android:layout_height="48dp"
                android:id="@+id/etId"
                android:inputType="textNoSuggestions"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789!@#$%^&amp;*()_+-=" />
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="아이디 중복"
                android:background="@drawable/button_square"
                android:id="@+id/btnValidate"
                android:textStyle="bold"
                />
        </LinearLayout>


        <EditText android:hint="비밀번호 :"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:id="@+id/etPasswd"
            />

        <EditText android:hint="비밀번호 재확인 :"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/etPasswdValid"
            />

        <EditText
            android:hint="이름 :"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/etName"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="나이 :"
            android:inputType="number"
            android:id="@+id/etAge"
            />

        <EditText
            android:hint="키 :"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/etHeight"
            />

        <EditText
            android:hint="몸무게 :"
            android:inputType="numberDecimal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/etWeight"
            />

        <RadioGroup android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rgroupGender"
            >

            <RadioButton
                android:text="여성"
                android:id="@+id/female"
                android:layout_height="100dp"
                android:layout_width="70dp"
                />
            <RadioButton
                android:text="남성"
                android:id="@+id/male"
                android:layout_height="100dp"
                android:layout_width="70dp"/>
        </RadioGroup>

        <Button
            android:text="확인"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:id="@+id/btnSubmit"
            android:background="@drawable/button_square"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>