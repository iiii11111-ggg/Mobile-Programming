<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingVertical="8dp">

    <!-- 항목 1 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/exerciseImage1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/babelcul"
            android:contentDescription="운동 이미지"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/exerciseName1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="바벨컬"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/exerciseImage1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 항목 2 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/exerciseImage2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/dumbelcurl"
            android:contentDescription="운동 이미지"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/exerciseName2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="덤벨컬"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/exerciseImage2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 항목 3 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/exerciseImage3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/iducul"
            android:contentDescription="운동 이미지"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/exerciseName3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="이두컬"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/exerciseImage3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 항목 4 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp">

        <ImageView
            android:id="@+id/exerciseImage4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/pushdown"
            android:contentDescription="운동 이미지"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/exerciseName4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="케이블 푸시다운"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/exerciseImage4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

